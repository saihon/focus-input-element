{
  "scripts": {
    "webpack": "npx webpack",
    "webpack-watch": "npx webpack --watch",
    "debug": "cd ./dist && npx web-ext run -u 'about:debugging#/runtime/this-firefox'",
    "start": "npx web-ext run -s ./dist --firefox=/snap/firefox/current/usr/lib/firefox/firefox -u 'about:debugging#/runtime/this-firefox'",
    "clean": "rm -rf ./node_modules ./dist *.zip *.xpi",
    "build-firefox": "cd ./dist && zip -r ../focus-input-element.xpi *",
    "build-chrome": "zip -r ./focus-input-element.zip ./dist",
    "build-all": "npm run build-firefox && npm run build-chrome",
    "compress": "zip -r source-code.zip ./src ./package.json ./tsconfig.json ./webpack.config.js ./README.md",
    "test": "ts-node node_modules/jest/bin/jest.js"
  },
  "devDependencies": {
    "@types/chrome": "0.0.233",
    "@types/mousetrap": "1.6.11",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "6.7.3",
    "style-loader": "3.3.2",
    "ts-loader": "9.4.2",
    "typescript": "5.0.4",
    "web-ext": "7.6.2",
    "webpack": "5.80.0",
    "webpack-cli": "5.0.2"
  },
  "dependencies": {
    "mousetrap": "^1.6.5",
    "mousetrap-global-bind": "^1.1.0"
  }
}
